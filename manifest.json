{
    "manifest_version": 3,
    "name": "SipWell: Water Tracker & Break Timer",
    "short_name": "SipWell",
    "version": "1.2.1",
    "description": "Track your daily water intake and set break reminders. Stay hydrated and maintain healthy work habits with customizable wellness goals.",
    "author": "Idhayam AI",
    "homepage_url": "https://Idhayam.ai",
    "keywords": [
      "wellness",
      "hydration",
      "break timer",
      "water reminder",
      "health tracker",
      "productivity",
      "work breaks",
      "daily routine"
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_title": "WellnessWatch"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "notifications",
      "alarms"
    ],
    "web_accessible_resources": [{
      "resources": [
        "chart.min.js"
      ],
      "matches": ["<all_urls>"]
    }],
    "commands": {
      "quick-water": {
        "suggested_key": {
          "default": "Ctrl+Shift+W",
          "mac": "Command+Shift+W"
        },
        "description": "Quick add water"
      },
      "quick-coffee": {
        "suggested_key": {
          "default": "Ctrl+Shift+C",
          "mac": "Command+Shift+C"
        },
        "description": "Quick add coffee"
      }
    }
  }
  